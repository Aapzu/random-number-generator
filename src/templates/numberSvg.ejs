<svg width="<%= width %>" height="<%= height %>" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
    <style>
      @font-face {
        font-family: 'Roboto';
        src: url('/fonts/Roboto-Regular.tts');
      }
      @font-face {
        font-family: 'Roboto Mono';
        src: url('/fonts/Roboto-Mono.tts');
      }
      @font-face {
        font-family: 'Roboto Serif';
        src: url('/fonts/Roboto-Serif.tts');
      }
      @font-face {
        font-family: 'Roboto Slab';
        src: url('/fonts/Roboto-Slab.tts');
      }
      svg{
        font-family: <%= font %>, sans-serif;
      }
    </style>
    <rect width="100%" height="100%" fill="<%= bgColor %>" />
    <text
        fill="<%= fontColor %>"
        font-size="100"
        letter-spacing="0em"
        text-anchor="middle"
        x="50%"
        y="60%"
    >
        <%= item %>
    </text>
    <% if (showUpdatedDate) { %>nt
        <text
            fill="<%= fontColor %>"
            font-size="12"
            letter-spacing="0em"
        >
            <tspan x="131" y="293.102">Updated: <%= updatedDate %></tspan>
        </text>
    <% } %>
</svg>
