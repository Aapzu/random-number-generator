<svg width="<%= width %>" height="<%= height %>" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
    <style type="text/css">
        @font-face {
          font-family: <%= font %>;
          font-style: normal;
          font-weight: 400;
          src: url('../fonts/<%= font %>.eot'); /* IE9 Compat Modes */
          src: local(''),
          url('/fonts/<%= font %>/<%= font %>.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
          url('/fonts/<%= font %>/<%= font %>.woff2') format('woff2'), /* Super Modern Browsers */
          url('/fonts/<%= font %>/<%= font %>.woff') format('woff'), /* Modern Browsers */
          url('/fonts/<%= font %>/<%= font %>.ttf') format('truetype'), /* Safari, Android, iOS */
          url('/fonts/<%= font %>/<%= font %>.svg#RobotoCondensed') format('svg'); /* Legacy iOS */
        }
        svg {
          background-color: <%= bgColor %>;
        }
    </style>
    <rect width="100%" height="100%" fill="<%= bgColor %>" />
    <text
        fill="<%= fontColor %>"
        font-size="100"
        letter-spacing="0em"
        text-anchor="middle"
        x="50%"
        y="60%"
        font-family="<%= font %>, sans-serif"
    >
        <%= item %>
    </text>
    <% if (showUpdatedDate) { %>
        <text
            fill="<%= fontColor %>"
            font-size="12"
            letter-spacing="0em"
            font-family="<%= font %>, sans-serif"
        >
            <tspan x="131" y="293.102">Updated: <%= updatedDate %></tspan>
        </text>
    <% } %>
</svg>
