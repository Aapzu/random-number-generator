<svg width="<%= width %>" height="<%= height %>" viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect width="100%" height="100%" fill="<%= bgColor %>" />
    <text
        fill="<%= fontColor %>"
        font-family="<%= font %>"
        font-size="100"
        letter-spacing="0em"
        text-anchor="middle"
        x="50%"
        y="60%"
    >
        <%= item %>
    </text>
    <% if (showUpdatedDate) { %>
        <text
            fill="<%= fontColor %>"
            font-family="<%= font %>"
            font-size="12"
            letter-spacing="0em"
        >
            <tspan x="131" y="293.102">Updated: <%= updatedDate %></tspan>
        </text>
    <% } %>
</svg>
